<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- parameterType(전달값):해당 쿼리문에 전달될 파라미터의 패키지 경로를 포함한 전체 클래스명이나 별칭 -->
<!-- resultType(결과값):해당 쿼리 결과값을 리턴하는 타입의 패키지 경로를 포함한 전체 클래스명이나 별칭 -->
<mapper namespace="board">

	<!-- 게시판 리스트 -->
	<select id="selectBoardList" resultType="boardDTO">
	  	<![CDATA[
 		
 		SELECT
	 			bId, 
	 			bName, 
	 			bTitle, 
	 			bContent, 
	 			bDate, 
	 			bHit 
 		FROM 
 				MVC_BOARD
 		ORDER BY 
 				bId desc
	 	]]>
	</select>

	<!-- 	글 쓰기 	-->
	<insert id="insertBoardList">
    	<![CDATA[
		   INSERT INTO MVC_BOARD (
				bId, 
				bName, 
				bTitle, 
				bContent, 
				bHit
				) 
				VALUES (
				(SELECT NVL(MAX(bid)+1, 1)
				FROM mvc_board),
				#{bName},
				#{bTitle},
				#{bContent},
				0
				)
    	]]>
	</insert>

 	<!-- 글상세 목록  -->
	<select id="contentView" parameterType="int" resultType="boardDTO">
    	<![CDATA[
		  SELECT * FROM 
		  	mvc_board 
		  WHERE 
		  	bId=#{bId}
		]]>
	</select>
	
	<!-- 글 수정 -->
	<update id="update" parameterType="boardDTO">
    	<![CDATA[
		  UPDATE 
		  	mvc_board 
		  SET 
		  	bName=#{bName},
		  	bTitle=#{bTitle},
		  	bContent=#{bContent} 
		  WHERE 
		  	bId=#{bId}
		]]>
	</update>
	
	<!-- 조회수 증가 -->
	<update id="updateHit" parameterType="int">
   		<![CDATA[
  			UPDATE 
  				mvc_board 
  			SET 
  				bHit=bHit+1 
  			WHERE 
  				bId=#{bId}
  		]]>
	</update>

	<delete id="delete">
    	<![CDATA[
  			DELETE 
  			FROM 
  				mvc_board 
  			WHERE 
  				bId=#{bId}
  		]]>
	</delete>
	
	<!-- 게시글 전체 목록 조회 및 검색 조회 -->
	<select id="listAll" resultType="boardDTO">
	<!-- 목록 조회 및 페이지 전체 쿼리 -->
	    <include refid="pagingHeader"></include>
		SELECT
			rownum,bid,bname,btitle,bcontent,bdate,bhit
		FROM mvc_board
	<!-- WHERE절을 include 태그로 삽입 -->
		<include refid="search"></include>
		ORDER BY bid desc,bdate desc
		  <include refid="pagingFooter"></include>  
	</select>
	
	<!-- 게시글 레코드 갯수 -->
	<select id="countArticle" resultType="int">
		SELECT COUNT(*) 
		FROM mvc_board
		<!-- WHERE절을 include 태그로 삽입 -->
		<include refid="search"></include>
	</select>
	
	<!-- sql code 조각 -->
	<!-- 반복되는 sql의 일부를 sql태그를 이용해서 따로 저장(include 태그에 넣기위함) -->
	<sql id="search">
		<choose>
			<!-- 전체 검색 -->
			<when test="searchOption =='all'">
				WHERE bname like '%'||#{keyword}||'%'
					OR bcontent like '%'||#{keyword}||'%'
					OR btitle like '%'||#{keyword}||'%'
			</when>
			<!-- 전체 검색이아닌 상세 검색 -->
			<otherwise>
				WHERE #{searchOption} like '%'||#{keyword}||'%' 
			</otherwise>
		</choose>
	</sql>
	
	<!-- 페이징 sql -->
	<sql id="pagingHeader">
    SELECT * FROM (
        SELECT ROWNUM AS rn, A.* FROM (
	</sql>
	<sql id="pagingFooter">
       				 ) A
    			) WHERE rn BETWEEN #{start} AND #{end}
	</sql>

</mapper>